<!DOCTYPE html>
<html lang="en">
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="" />
      <title>Exerices</title>

      <link
        rel="canonical"
        href="https://getbootstrap.com/docs/4.5/examples/album/"
      />

      <!-- Bootstrap core CSS -->
      <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
        crossorigin="anonymous"
      />

      <link href="css/album.css" rel="stylesheet" />
    </head>
    <body>
      <%- include('common/header'); -%>

      <div class="container">
        <h1 class="text-center">Create A New Exercise</h1>
        <div class="row justify-content-md-center">
          <div class="col-">
            <form method="POST" action="/create-exercises">
              <div class="form-group">
                
                <label for="name">Exercise Name:</label>
                <input
                  type="text"
                  class="form-control"
                  id="exercise"
                  name="exercise"
                />

                <% if (errors['exercise']) { %>
                <p style="color: red"><%= errors['exercise'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="name">Weight (kg):</label>
                <input
                  type="number"
                  class="form-control"
                  id="weight"
                  name="weight"
                />

                <% if (errors['weight']) { %>
                <p style="color: red"><%= errors['weight'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="name">Repititions:</label>
                <input
                  type="number"
                  class="form-control"
                  id="reps"
                  name="reps"
                />

                <% if (errors['reps']) { %>
                <p style="color: red"><%= errors['reps'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="name">Sets:</label>
                <input
                  type="number"
                  class="form-control"
                  id="sets"
                  name="sets"
                />

                <% if (errors['sets']) { %>
                <p style="color: red"><%= errors['sets'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                <label for="name">Difficulty and Comments:</label>
                <input
                  type="text"
                  class="form-control"
                  id="difficulty"
                  name="difficulty"
                />

                <% if (errors['difficulty']) { %>
                <p style="color: red"><%= errors['difficulty'].message %></p>
                <% } %>
              </div>
              
              <div class="form-group">
                <label for="exampleFormControlSelect1">Select Muscle:</label>
                <select
                  class="form-control"
                  name="muscle_id"
                  id="exampleFormControlSelect1"
                >
                  <% muscles.forEach( muscle => { %>
                  <option value="<%= muscle._id %>"><%= muscle.name %></option>
                  <% }) %>
                </select>
              </div>

              

              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
      <%- include('common/footer'); -%>
    </body>
  </html>
</html>
